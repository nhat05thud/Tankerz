@page
@using Microsoft.AspNetCore.Mvc.Localization
@using Tankerz.Localization
@using Volo.Abp.Users
@using Volo.Abp.AspNetCore.Mvc.UI.Layout
@using Tankerz.Web.Menus
@inject IPageLayout PageLayout
@model Tankerz.Web.Pages.IndexModel
@inject IHtmlLocalizer<TankerzResource> L
@inject ICurrentUser CurrentUser
@{
    PageLayout.Content.Title = L["Home"].Value;
    PageLayout.Content.BreadCrumb.Add(L["Menu:Home"].Value);
    PageLayout.Content.MenuItemName = TankerzMenus.Home;
}
@section styles {
    <abp-style src="/Pages/Index.css" />
}
@section scripts {
    <abp-script src="/Pages/Index.js" />
}
@*@if (!CurrentUser.IsAuthenticated)
    {
    <a abp-button="Primary" href="~/Account/Login"><i class="fa fa-sign-in"></i> @L["Login"]</a>}*@

<div class="content container-fluid">
    <div class="row justify-content-sm-center text-center py-10">
        <div class="col-sm-7 col-md-5">
            <img class="img-fluid mb-5" src="/assets/svg/illustrations/graphs.svg" alt="Image Description" style="max-width: 21rem;">

            <h1>Hello, nice to see you!</h1>
            <p>You are now minutes away from creativity than ever before. Enjoy!</p>
        </div>
    </div>
</div>