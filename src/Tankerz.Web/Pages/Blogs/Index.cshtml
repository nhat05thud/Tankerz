@page
@using Tankerz.Localization
@using Tankerz.Permissions
@using Tankerz.Web.Pages.Blogs
@using Microsoft.AspNetCore.Authorization
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<TankerzResource> L
@inject IAuthorizationService AuthorizationService
@model IndexModel

@section scripts
{
    <abp-script src="/Pages/Blogs/Index.js" />
}

<abp-card class="custom-card">
    <abp-card-header>
        <abp-row>
            <abp-column size-md="_6">
                <abp-card-title>@L["Blogs"]</abp-card-title>
            </abp-column>
            <abp-column size-md="_6" class="text-right">
                <abp-button id="NewBlogButton"
                            text="@L["NewBlog"].Value"
                            icon="plus"
                            button-type="Primary" />
            </abp-column>
        </abp-row>
    </abp-card-header>
    <abp-card-body>
        <abp-table striped-rows="false" id="BlogsTable"></abp-table>
    </abp-card-body>
</abp-card>