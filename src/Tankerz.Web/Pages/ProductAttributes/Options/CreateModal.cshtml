@page
@using Tankerz.Localization
@using Tankerz.Web.Pages.ProductAttributes.Options
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model CreateModalModel
@inject IStringLocalizer<TankerzResource> L
@{
    Layout = null;
}
<script>
    abp.ui.unblock();
</script>
<form asp-page="/ProductAttributes/Options/CreateModal" onkeydown="return event.key != 'Enter';" id="form-with-ck">
    <abp-input asp-for="ProductAttributeOption.ProductAttributeId" />
    <abp-modal centered="true" scrollable="true" size="ExtraLarge" id="myModal">
        <abp-modal-header class="text-uppercase" title="Thêm mới option"></abp-modal-header>
        <abp-modal-body class="custom-modal-body">
            <abp-input asp-for="ProductAttributeOption.Name" autocomplete="off" />
            <abp-input asp-for="ProductAttributeOption.Value" autocomplete="off" />
            <abp-input asp-for="ProductAttributeOption.DisplayOrder" autocomplete="off" />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>